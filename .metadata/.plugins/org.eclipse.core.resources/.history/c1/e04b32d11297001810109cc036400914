package com.pojo;

import java.util.Arrays;

public class Student 
{
	private String name;
	private int[] marks;
	int rollNo;

	Student()
	{
		name = "CrimeMasterGogo";
		marks = Arrays.fill(marks, 101);
		rollNo = 0;
	}
	Student(String name,int[] marks,int rollNo)
	{
		this.name = name;
		this.marks = marks;
		this.rollNo = rollNo;
	}
	
	public void display()
	{
		System.out.println(name + "\t"+ rollNo +"\t");
		for(int x:marks)
		{
			System.out.print(x+"  ");
		}
	}
	
	
}
